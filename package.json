{
  "name": "metal",
  "version": "2.0.0",
  "description": "Minimalistic React Boilerplate with Hot Reloading and Express Server",
  "main": "index.js",
  "scripts": {
    "publish": "npm run clean && npm run build",
    "server": "npm run publish && babel-node server.js",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.prod.babel.js",
    "clean": "rimraf dist/*",
    "lint": "eslint src",
    "postinstall": "npm prune",
    "start": "babel-node server.js",
    "test": "cross-env NODE_ENV=test jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtasek/metal.git"
  },
  "keywords": [
    "babel",
    "babel-node",
    "boilerplate",
    "edit",
    "express",
    "hmr",
    "hot",
    "jest",
    "live",
    "react",
    "react-transform",
    "reactjs",
    "reload",
    "test",
    "webpack"
  ],
  "author": "Jakub Ta≈°ek <jakub.tasek@gmail.com> (http://github.com/jtasek)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jtasek/metal/issues"
  },
  "homepage": "https://github.com/jtasek/metal#readme",
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "8.0.2",
    "babel-plugin-react-transform": "^3.0.0",
    "cp": "^0.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "react-hot-loader": "next",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.6.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.3.0",
    "webpack-hot-middleware": "^2.24.2"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}
